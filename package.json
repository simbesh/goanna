{
  "name": "goanna",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "bun run --cwd apps/web dev",
    "build:web": "bun run --cwd apps/web build",
    "test:web": "bun run --cwd apps/web test",
    "dev:api": "go run ./apps/api/cmd/server -dsn file:./apps/api/data/goanna.db?_fk=1",
    "gen:ent": "go generate ./apps/api/ent",
    "gen:api:go": "go generate ./apps/api/internal/api/gen",
    "gen:api:ts": "bun run --cwd packages/api-client generate",
    "gen:api": "bun run gen:api:go && bun run gen:api:ts",
    "bootstrap": "bun install && bun run gen:ent && bun run gen:api"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
